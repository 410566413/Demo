<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hawker.yangtianqi.demo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动窗体"
        android:id="@+id/btnCust"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务窗体"
        android:id="@+id/btnService"
        android:layout_alignTop="@+id/btnCust"
        android:layout_toEndOf="@+id/btnComponentIntent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动广播窗体"
        android:id="@+id/btnBraod"
        android:layout_below="@+id/btnService"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取联系人信息"
        android:id="@+id/btnReadContact"
        android:layout_alignTop="@+id/btnBraod"
        android:layout_alignEnd="@+id/btnService" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动意图实例"
        android:id="@+id/btnStartIntent"
        android:layout_below="@+id/btnReadContact"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="布局实例"
        android:id="@+id/btnLayoutIntent"
        android:layout_alignTop="@+id/btnStartIntent"
        android:layout_alignStart="@+id/btnReadContact" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lisview组件实例"
        android:id="@+id/btnComponentIntent"
        android:layout_below="@+id/btnLayoutIntent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他组件实例"
        android:id="@+id/btnOtherCompIntent"
        android:layout_alignTop="@+id/btnComponentIntent"
        android:layout_toEndOf="@+id/btnComponentIntent"
        android:layout_marginStart="37dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="适配器实例"
        android:id="@+id/btnAdapterApp"
        android:onClick="btnAdapterAppClick"
        android:layout_below="@+id/btnOtherCompIntent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
