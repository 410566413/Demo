<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hawker.yangtianqi.demo.WatchFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="80dp"
        android:id="@+id/timeView"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:id="@+id/btnWatchStart"
        android:layout_below="@+id/timeView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:id="@+id/btnWatchStop"
        android:layout_below="@+id/btnWatchStart"
        android:layout_alignStart="@+id/btnWatchStart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置"
        android:id="@+id/btnWatchReset"
        android:layout_below="@+id/btnWatchStop"
        android:layout_alignStart="@+id/btnWatchStop" />

</RelativeLayout>
