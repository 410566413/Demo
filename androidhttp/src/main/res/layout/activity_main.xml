<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hawker.yangtianqi.androidhttp.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载图片"
        android:id="@+id/btnDownPic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取json接口数据"
        android:id="@+id/btnJsonString"
        android:layout_above="@+id/btnPostFormData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnDownPic"
        android:layout_alignEnd="@+id/btnDownPic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交表单数据"
        android:id="@+id/btnPostFormData"
        android:layout_above="@+id/btnDownPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnDownPic"
        android:layout_alignEnd="@+id/btnDownPic" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/btnJsonString"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignRight="@+id/btnJsonString"
        android:layout_alignEnd="@+id/btnJsonString"
        android:layout_toRightOf="@+id/imageView" />
</RelativeLayout>
